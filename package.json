{
	"name": "@vtian/yapi-mcp-server",
	"version": "0.0.1",
	"author": "tianlu",
	"description": "yapi-mcp-server 能将 YApi 的接口定义自动化地转换成代码、类型和 Mock 数据，大大提升开发效率",
	"main": "dist/server.js",
	"bin": {
		"yapi-mcp-server": "./dist/server.js"
	},
	"scripts": {
		"dev": "export LOG_LEVEL=DEBUG && node src/server.js",
		"build": "rollup -c",
		"start": "node dist/server.js",
		"prepublishOnly": "npm run build"
	},
	"license": "MIT",
	"keywords": [
		"mcp",
		"typescript",
		"yapi",
		"code-generation",
		"api"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.9.0",
		"axios": "^1.8.4",
		"zod": "^3.24.2"
	},
	"files": [
		"dist",
		"package.json",
		"docs",
		"README.md"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.8",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@rollup/plugin-terser": "^0.4.4",
		"rollup": "^4.52.5"
	}
}
